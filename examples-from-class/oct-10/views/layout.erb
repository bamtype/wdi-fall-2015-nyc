<html>
<head>
  <title>My Website Title</title>
  <link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>
  <!-- we display the flash info only if it is set -->
  <% if flash[:info] %>
    <div class="flash flash-info">
      <%= flash[:info] %>
    </div>
  <% end %>
  <!-- we display flash alert only if it is set -->
  <% if flash[:alert] %>
   <div class="flash flash-alert">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <!-- we are displaying our subtemplate output within the yield -->
  <%= yield %>
</body>
</html>